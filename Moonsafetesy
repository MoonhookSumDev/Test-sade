local Rayfield=loadstring(game:HttpGet("https://sirius.menu/rayfield"))()
local w=Rayfield:CreateWindow({Name="MoonhookðŸŒ™ Hitbox Expander",LoadingTitle="MoonhookðŸŒ™",LoadingSubtitle="Hitbox Controller",ConfigurationSaving={Enabled=false},Discord={Enabled=false},KeySystem=false})
local t=w:CreateTab("Universal",4483362458)
local s=4
local c=Color3.fromRGB(255,0,0)
local h=0.3
local e=false
t:CreateToggle({Name="On / Off",CurrentValue=false,Flag="HitboxToggle",Callback=function(v)e=v;if not v then for _,p in ipairs(game.Players:GetPlayers())do if p~=game.Players.LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart")then local r=p.Character.HumanoidRootPart r.Size=Vector3.new(2,2,1) r.Transparency=1 r.Material=Enum.Material.Plastic r.Color=Color3.new(1,1,1) r.CanCollide=true end end end end})
t:CreateSlider({Name="Hitbox Size",Range={1,50},Increment=1,Suffix="Size",CurrentValue=s,Flag="HitboxSlider",Callback=function(v)s=v end})
t:CreateSlider({Name="Hitbox Transparency",Range={0,1},Increment=0.05,Suffix="",CurrentValue=h,Flag="HitboxTransparency",Callback=function(v)h=v end})
t:CreateColorPicker({Name="Hitbox Color",Color=c,Flag="HitboxColor",Callback=function(v)c=v end})
task.spawn(function()while task.wait(0.5)do if e then for _,p in ipairs(game.Players:GetPlayers())do if p~=game.Players.LocalPlayer and p.Character and p.Character:FindFirstChild("HumanoidRootPart")then local r=p.Character.HumanoidRootPart r.Size=Vector3.new(s,s,s) r.Transparency=h r.Material=Enum.Material.Neon r.Color=c r.CanCollide=false end end end end end)
